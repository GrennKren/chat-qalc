{
  "schemaVersion": 1,
  "id": "chatqalc",
  "version": "${version}",

  "name": "ChatQalc!",
  "description": "A simple mod that turns your chat into a qalc (calculator) interface.",
  "authors": [
    "vlad2305m"
  ],
  "contact": {
    "sources": "https://github.com/vlad2305m/chat-qalc"
  },

  "license": "GPLv3",
  "icon": "assets/chatqalc/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.vlad2305m.chatqalc.ChatQalc"
    ],
    "modmenu": [
      "com.vlad2305m.chatqalc.ModMenuIntegration"
    ]
  },
  "mixins": [
    "chatqalc.mixins.json"
  ],

  "depends": {
    "minecraft": "*",
    "java": ">=17"
  }
}
